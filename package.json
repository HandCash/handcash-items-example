{
  "name": "handcash-ordinals-minter",
  "version": "1.0.0",
  "description": "A collection of scripts to inscribe 1Sat Ordinals using HandCash.",
  "main": "src/scripts/CreateMintOrder.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "getInscriptionOrder": "tsc && node --no-warnings dist/scripts/createItems/GetInscriptionOrder.js",
    "inscribeCollection": "tsc && node --no-warnings dist/scripts/createItems/InscribeCollection.js",
    "uploadImage": "tsc && node --no-warnings dist/scripts/util/uploadImage.js",
    "sendAllOrderItems": "tsc && node --no-warnings dist/scripts/util/sendAllOrderItems.js",
    "InscribeStaticCollectionItems": "tsc && node --no-warnings dist/scripts/createItems/InscribeStaticCollectionItems.js",
    "inscribeDynamicCollectionItems": "tsc && node --no-warnings dist/scripts/createItems/InscribeDynamicCollectionItems.js",
    "AddStaticItemsToCreationOrder": "tsc && node --no-warnings dist/scripts/createItems/AddStaticItemsToCreationOrder.js",
    "CommitItemCreationOrder": "tsc && node --no-warnings dist/scripts/createItems/CommitItemCreationOrder.js",
    "InscribeItems": "tsc && node --no-warnings dist/scripts/createItems/InscribeItems.js",
    "createCatalog": "tsc && node --no-warnings dist/scripts/catalog/CreateCatalog.js",
    "addCollectionOrderItemsToCatalog": "tsc && node --no-warnings dist/scripts/catalog/AddCollectionOrderItemsToCatalog.js",
    "airdropItems": "tsc && node --no-warnings dist/scripts/airdrop/AirdropItems.js",
    "transferSingleItem": "tsc && node --no-warnings dist/scripts/transfer/TransferSingleItem.js",
    "ProcessFullItemCreationOrder": "tsc && node --no-warnings dist/scripts/createItems/ProcessFullItemCreationOrder.js",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HandCash/handcash-ordinals-minter.git"
  },
  "keywords": [
    "ordinals",
    "nft",
    "bsv",
    "handcash"
  ],
  "author": "HandCash",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HandCash/handcash-ordinals-minter/issues"
  },
  "homepage": "https://github.com/HandCash/handcash-ordinals-minter#readme",
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/node": "^20.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@handcash/handcash-connect": "^0.7.4-hotfix.3",
    "bsv-wasm": "^2.0.1",
    "commander": "^10.0.1",
    "dotenv": "^16.1.4",
    "nanoid": "^4.0.2",
    "p-limit": "^4.0.0",
    "uuid": "^9.0.0"
  }
}
